{
  "name": "Автологин",
  "manifest_version": 2,
  "version": "0.1",
  "description": "Настройка автовхода",
  "permissions": [
    "storage",
    "contextMenus",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "Resource/JS/login.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "Resource/JS/background.js"
    ]
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
